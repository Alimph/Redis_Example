@page
@model Customer.Pages.IndexModel
@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Creation Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Age</td>
                <td>@customer.CreationDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
